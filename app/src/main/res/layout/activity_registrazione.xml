<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrazioneActivity"
    android:background="#1ed760">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:fontFamily="@font/acme"
            android:text="Registrati a Unishare"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextRegNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20sp"
            android:hint="   Inserisci nome"/>

        <EditText
            android:id="@+id/editTextRegCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            android:hint="   Inserisci cognome"/>

        <EditText
            android:id="@+id/editTextRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            android:hint="   Inserisci email"/>

        <EditText
            android:id="@+id/editTextRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            android:hint=" Inserisci password"/>

        <EditText
            android:id="@+id/editTextRegRipetiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            android:hint=" Reinserisci password"/>

        <DatePicker
            android:background="#f0ffff"
            android:id="@+id/editDatePicker"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </DatePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Isrisci il sesso"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"/>

               <RadioGroup
            android:id="@+id/radioGroupSesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioUomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Uomo"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioDonna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Donna"/>

        </RadioGroup>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Condizioni sulla privacy"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/checkboxPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:text="Accetto termini e condizioni"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            >

            <Button

                 android:id="@+id/buttonRegistrazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/buttonStyle"
                android:text="Registrati" />
            <Button

                android:id="@+id/buttonGiaRegistrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/buttonStyle"
                android:text="Registrati"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>