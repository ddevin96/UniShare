<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextModificaNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="modifica nome"/>

        <EditText
            android:id="@+id/editTextModificaCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="modifica cognome"/>

        <EditText
            android:id="@+id/editTextModificaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="modifica email"/>

        <EditText
            android:id="@+id/editTextModificaPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="modifica email"/>

        <EditText
            android:id="@+id/editTextModificaSesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="modifica sesso"/>

        <DatePicker
            android:id="@+id/modificaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></DatePicker>

        <Button
            android:id="@+id/ButtonModifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferma"/>

    </LinearLayout>


</ScrollView>